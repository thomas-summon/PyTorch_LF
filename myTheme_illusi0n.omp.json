{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
		{
		  "type": "python",
          "style": "plain",
		  "properties": {
		    "display_mode": "context",
			"fetch_virtual_env": true,
			"home_enabled": true
		  },
          "foreground": "#100e23",
          "background": "",
          "template": "({{ if .Venv }}{{ .Venv }}{{end}}) "
		},
        {
          "type": "text",
          "style": "plain",
          "template": "$",
          "background": "",
          "foreground": "#ff8800",
          "Text": "",
          "Duration": 0,
          "NameLength": 0
        },
        {
          "type": "session",
          "style": "plain",
          "template": "{{ .UserName }}:",
          "background": "",
          "foreground": "#ff8800",
          "Text": "",
          "Duration": 0,
          "NameLength": 0
        },
        {
          "type": "path",
          "style": "plain",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "background": "",
          "foreground": "#62c0ff",
          "Text": "",
          "Duration": 0,
          "NameLength": 0
        },
        {
          "type": "git",
          "style": "plain",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#6287ff{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#7f62ff{{ end }}",
            "{{ if gt .Ahead 0 }}#9962ff{{ end }}",
            "{{ if gt .Behind 0 }}#c062ff{{ end }}"
          ],
          "template": "<#ff8800>on</> {{.UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "properties": {
            "branch_max_length": 25,
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "background": "",
          "foreground": "#62c0ff",
          "Text": "",
          "Duration": 0,
          "NameLength": 0
        },
        {
          "type": "text",
          "style": "plain",
          "template": "‚ùØ ",
          "background": "",
          "foreground": "#ff8800",
          "Text": "",
          "Duration": 0,
          "NameLength": 0
        }
      ]
    }
  ]
}
